# Test Environment Configuration
NODE_ENV=test
PORT=5001

# Test Database - In-Memory SQLite (hızlı ve izole testler için)
# NOT: Sequelize test için SQLite kullanacak
DB_DIALECT=sqlite
DB_STORAGE=:memory:

# JWT Configuration (test için basit değerler)
JWT_SECRET=test-jwt-secret-key-12345
JWT_EXPIRE=1h
JWT_REFRESH_EXPIRE=1d

# Cloudinary (test ortamında devre dışı)
CLOUDINARY_CLOUD_NAME=test-cloud
CLOUDINARY_API_KEY=test-key
CLOUDINARY_API_SECRET=test-secret

# Email (test ortamında devre dışı)
EMAIL_HOST=test-smtp
EMAIL_PORT=587
EMAIL_USER=test@example.com
EMAIL_PASS=test-password

# Frontend URL (test için)
FRONTEND_URL=http://localhost:5173

# Rate Limiting (test için yüksek değerler)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=10000
